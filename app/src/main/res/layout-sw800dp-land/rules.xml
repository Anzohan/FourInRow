<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/rules_text"
        android:id="@+id/rules_text_view"
        android:padding="@dimen/rules_text_padding"
        android:textSize="@dimen/text_size_medium"
        android:layout_weight="1"
        android:textColor="@color/rules_text_color"
        android:gravity="fill_horizontal"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/exit_rules_btn"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_medium"
        android:layout_marginBottom="@dimen/back_rules_btn_margin_bottom"/>
</LinearLayout>